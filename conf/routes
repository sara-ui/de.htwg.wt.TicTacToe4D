# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for TicTacToe4D

GET     /                           controllers.TicTacToeScalaController.tictactoe

GET     /about                      controllers.TicTacToeScalaController.about

GET     /reset                      controllers.TicTacToeScalaController.reset

GET     /redo                       controllers.TicTacToeScalaController.redo

GET     /undo                       controllers.TicTacToeScalaController.undo

GET     /restart                    controllers.TicTacToeScalaController.restart

GET     /players                    controllers.TicTacToeScalaController.players(player1: String, player2: String)

POST    /move                       controllers.TicTacToeScalaController.move

GET     /json                       controllers.TicTacToeScalaController.gameToJson


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)